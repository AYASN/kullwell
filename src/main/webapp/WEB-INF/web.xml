<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

   <servlet>
      <servlet-name>Recipe Controller</servlet-name>
      <servlet-class>com.yandm.assir.controller.RecipeController</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>Recipe Controller</servlet-name>
      <url-pattern>/recipe/*</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>Recipe Ingredient Controller</servlet-name>
      <servlet-class>com.yandm.assir.controller.RecipeIngredientController</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>Recipe Ingredient Controller</servlet-name>
      <url-pattern>/recipe/ingredient/*</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>Ingredient Controller</servlet-name>
      <servlet-class>com.yandm.assir.controller.IngredientController</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>Ingredient Controller</servlet-name>
      <url-pattern>/getIngredients/*</url-pattern>
   </servlet-mapping>

   <welcome-file-list>
      <welcome-file>index.jsp</welcome-file>
   </welcome-file-list>

</web-app>
